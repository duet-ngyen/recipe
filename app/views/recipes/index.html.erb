<% provide :title, "Recipes" %>
<%= render "shared/page_title", title: "All recipes" %>
<hr>
<div class=" col-sm-8 col-sm-offset-2">
  <%= will_paginate %>
  <% @recipes.each do |recipe| %>
    <div class="well">
      <div class="avatar col-sm-3">
        <%= gravatar_for recipe.chef, size: 80 %>
        <h5>Name: <%= recipe.chef.name %></h5>
      </div>
      <div class="recipe-info col-sm-offset-3">
        <h4><%= link_to recipe.title, recipe_path(recipe) %></h4>
        <div class="time-ago">Modified or created: <%= time_ago_in_words recipe.updated_at %></div>
      </div>

      <div class="pull-right">
        <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-up"></i> <%= recipe.count_like %>
        <% end %>
        <span class="tab"></span>
        <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-down"></i> <%= recipe.count_dislike %>
        <% end %>
      </div>

      <div class="clear-both"></div>
    </div>
  <% end %>
  <%= will_paginate %>
</div>
<div class="clear-both"></div>
<hr>
